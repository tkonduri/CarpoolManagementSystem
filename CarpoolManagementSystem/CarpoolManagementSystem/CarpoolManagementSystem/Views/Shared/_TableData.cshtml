@model IEnumerable<LoginSignup.Models.TripModel>

<br />
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Source</th>
            <th>Destination</th>
            <th>Date</th>
            <th>Vacant seats</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.source</td>
                <td>@item.destination</td>
                <td>@item.date</td>
                <td>@item.vacant_seats</td>
                <td>@item.description</td>
                <td><input type="button" value="Goto Trip" onclick="window.location.href='@Url.Action("TripDetails", "Trip" )';" /></td>
            </tr>
        }
    </tbody>
</table>
<link href="~/Content/bootstrap-superhero.css" rel="stylesheet" />
